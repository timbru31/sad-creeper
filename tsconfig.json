{
    "compilerOptions": {
        "incremental": true,
        "target": "ESNext",
        "module": "NodeNext",
        "lib": ["ES2023"],
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "pretty": false,
        "skipLibCheck": true
    },
    "include": ["src/"],
    "compileOnSave": false
}
