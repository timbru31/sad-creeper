{
    "compilerOptions": {
        "incremental": true,
        "target": "es5",
        "module": "commonjs",
        "lib": ["ES2022"],
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "pretty": false,
        "skipLibCheck": true
    },
    "include": ["src/", "api/", "test/"],
    "compileOnSave": false
}
